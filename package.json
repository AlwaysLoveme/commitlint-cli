{
  "name": "@zhuxian/commitlint-cli",
  "version": "0.0.1",
  "description": "A node cli tool to generate commitlint configuration rules for your project with @commitlint/cli and husky",
  "bin": {
    "commitlint-cli": "./bin/index.js"
  },
  "scripts": {
    "dev": "concurrently \"tsc -w\" \"tsc-alias -w\"",
    "build": "tsc && tsc-alias -p tsconfig.json",
    "prepare": "husky install",
    "commit": "git add . && git cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "files": [
    "dist",
    "bin"
  ],
  "keywords": ["node-cli", "commitlint", "git commit"],
  "author": "zhuxian",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.76",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.4.9",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cfonts": "^3.2.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.0",
    "conventional-changelog-cli": "^3.0.0",
    "cz-conventional-changelog-zh": "^0.0.2",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.0.0",
    "execa": "^7.2.0",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "ora": "^5.4.1",
    "prettier": "^3.0.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write ./src",
      "git add ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-zh"
    }
  }
}
