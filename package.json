{
  "name": "@zhuxian/commitlint-cli",
  "version": "0.0.13",
  "description": "A node cli tool to generate commitlint configuration rules for your project with @commitlint/cli and husky",
  "bin": {
    "commitlint-cli": "./bin/index.js"
  },
  "scripts": {
    "start": "tsup --watch",
    "build": "tsup && pnpm copy:files",
    "lint": "eslint --fix . --ext .ts",
    "prepare": "husky",
    "commit": "git add . && git cz",
    "prestart": "pnpm copy:files",
    "prepublish": "pnpm build",
    "copy:files": "cpy --flat ./src/configFiles/* ./dist/configFiles",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "files": [
    "dist",
    "bin"
  ],
  "keywords": [
    "node-cli",
    "commitlint",
    "git commit"
  ],
  "author": "zhuxian",
  "license": "MIT",
  "dependencies": {
    "@types/shelljs": "^0.8.15",
    "cfonts": "^3.2.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "execa": "^7.2.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^12.1.0",
    "js-yaml": "^4.1.0",
    "ora": "^5.4.1",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@microsoft/api-extractor": "^7.40.0",
    "@types/bun": "^1.0.5",
    "@types/fs-extra": "^11.0.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.4.9",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.0.0",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.0",
    "conventional-changelog-cli": "^4.1.0",
    "cpy-cli": "^5.0.0",
    "cz-conventional-changelog-zh": "^0.0.2",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "terser": "^5.27.0",
    "tsc-alias": "^1.8.7",
    "tsup": "^8.0.1",
    "typescript": "^5.1.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-zh"
    }
  }
}
